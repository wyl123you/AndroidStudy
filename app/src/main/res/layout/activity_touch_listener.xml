<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/welcome"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.example.study.widget.StrokeGradientTextView
            android:id="@+id/cc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="asdfgh"
            android:textColor="#ff0000"
            android:textSize="100sp"
            app:endColor="#ffff00"
            app:layout_constraintTop_toBottomOf="@id/button2"
            app:shadowEnable="true"
            app:startColor="#00ffff"
            app:strokeColor="#000000"
            app:strokeEnable="true"
            app:strokeWidth="3dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="asdfgh"
            android:textColor="#000000"
            android:textSize="100sp"
            app:layout_constraintTop_toBottomOf="@id/cc" />

        <TextView
            android:id="@+id/shake_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="465486415348563"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@id/text" />


        <TextView
            android:id="@+id/shimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="465486415348563"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@id/text" />

        <CheckBox
            android:id="@+id/chain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:button="@drawable/hhh"
            android:text="@string/app_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shimmer" />


        <ProgressBar
            android:id="@+id/progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:min="0"
            android:progress="70"
            android:progressDrawable="@drawable/progress_drawable"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chain" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>